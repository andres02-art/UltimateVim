import java.util.*

public class ConversionesJava {
        public static void main(String args[]){
                // Conversion a entero por metodo
                Scanner terminal = new Scanner(System.in);
                System.out.print("digite un numero: ");
                int numberInt = Integer.parseInt(terminal.nextLine());
                System.out.println("el numero enterminalo fue: "+numberInt);
                // Conversion a doble por metodo
                System.out.print("digite un numero: ");
                double numberDouble = Double.parseDouble(terminal.nextLine());
                System.out.println("el numero doble fue: "+numberDouble);
                // Conversion a string por metodo
                numberInt = 89;
                String ChainNum = String.valueOf(numberInt);
                System.out.println("la cadena convertida fue: "+ChainNum);
                
        }
}
